{
  "name": "withmoney-api",
  "version": "2.0.0",
  "description": "withmoney backend project",
  "main": "src/main.ts",
  "scripts": {
    "dev": "cross-env NODE_ENV=development env-cmd ts-node-dev --no-notify --respawn --transpile-only src/main.ts",
    "start": "node dist/src/main",
    "clean": "rm -rf dist",
    "build": "npm -s run clean && cp .env.example prisma/.env && npm -s run generate && tsc",
    "build:only": "tsc",
    "heroku-postbuild": "prisma generate && prisma db push --preview-feature && npm run build",
    "test": "jest",
    "generate": "npm run generate:prisma && npm -s run generate:nexus",
    "generate:prisma": "prisma generate",
    "generate:nexus": "ts-node --transpile-only src/schema",
    "migrate:save": "env-cmd prisma migrate dev --preview-feature",
    "migrate:up": "env-cmd prisma migrate dev --preview-feature",
    "migrate:down": "env-cmd prisma migrate down 1 --experimental",
    "studio": "env-cmd prisma studio --experimental"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/withmoney/withmoney-api.git"
  },
  "keywords": [
    "withmoney",
    "api"
  ],
  "author": "David Costa <davidcostadev@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/withmoney/withmoney-api/issues"
  },
  "engines": {
    "node": "12.x"
  },
  "homepage": "https://github.com/withmoney/withmoney-api#readme",
  "devDependencies": {
    "@prisma/cli": "2.13.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/graphql-iso-date": "^3.4.0",
    "@types/jest": "^25.1.3",
    "cors": "^2.8.5",
    "cross-env": "^7.0.2",
    "env-cmd": "^10.1.0",
    "jest": "^25.1.0",
    "nodemon": "^2.0.2",
    "ts-jest": "^25.2.1",
    "ts-node": "9.0.0",
    "ts-node-dev": "^1.0.0",
    "typescript": "4.0.5"
  },
  "dependencies": {
    "@nexus/schema": "0.19.2",
    "@prisma/client": "2.13.0",
    "@types/bcrypt": "^3.0.0",
    "@types/jsonwebtoken": "^8.3.7",
    "@types/nodemailer": "^6.4.0",
    "@types/uuid": "8.3.0",
    "apollo-server": "^2.19.0",
    "apollo-server-express": "^2.14.2",
    "apollo-server-testing": "^2.10.1",
    "bcrypt": "^5.0.0",
    "bcryptjs": "^2.4.3",
    "express": "^4.17.1",
    "graphql": "15.4.0",
    "graphql-iso-date": "^3.6.1",
    "graphql-subscriptions": "^1.1.0",
    "jsonwebtoken": "^8.5.1",
    "nexus-plugin-prisma": "0.26.0",
    "nodemailer": "^6.4.4",
    "uuid": "8.3.1"
  }
}
